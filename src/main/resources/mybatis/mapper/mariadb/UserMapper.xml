    <insert id="insertUser" parameterType="BaseUser" >
        INSERT INTO users (
            email,
            password,
            name,
            phone_num,
            type,
            enabled,
            created_datetime,
            updated_datetime
        ) VALUES (
            #{email},
            #{password},
            #{name},
            #{phoneNum},
            #{type},
            #{enabled},
            NOW(),
            NOW()
        )
    </insert>
</mapper>
